{
  "name": "tp-microfrontend",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "lint": "biome check --write --no-errors-on-unmatched .",
    "build": "rsbuild build",
    "dev": "rsbuild dev --open",
    "preview": "rsbuild preview",
    "prepare": "husky",
    "commit": "git-cz",
    "test": "jest --passWithNoTests --maxWorkers=50%",
    "test:watch": "jest --passWithNoTests --watch --maxWorkers=25%",
    "test:wc": "jest --passWithNoTests --watch --coverage --maxWorkers=75%",
    "test:coverage": "jest --passWithNoTests --coverage --no-cache --maxWorkers=80%"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@biomejs/biome": "^1.9.3",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@module-federation/enhanced": "^0.8.9",
    "@module-federation/rsbuild-plugin": "^0.8.9",
    "@reduxjs/toolkit": "^2.5.1",
    "@rsbuild/core": "^1.1.8",
    "@rsbuild/plugin-react": "^1.0.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "react-error-boundary": "^5.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.4",
    "redux-saga": "^1.3.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
